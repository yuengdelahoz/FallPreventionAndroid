<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:orientation="vertical"
    android:gravity="center"
    >


    <Switch
        android:id="@+id/floor_detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="left|center"
        android:paddingHorizontal="200dp"
        android:text="Floor Detection  " />

    <Switch
        android:id="@+id/object_detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="left|center"
        android:paddingHorizontal="200dp"
        android:text="Object Detection  " />

    <Switch
        android:id="@+id/distance_estimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="left|center"
        android:paddingHorizontal="200dp"
        android:text="Distance Estimation" />

    <Switch
        android:id="@+id/water_detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:gravity="left|center"
        android:paddingHorizontal="200dp"
        android:text="Water Detection" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:paddingLeft="40dp"
        android:paddingRight="60dp"
        >

        <TextView
            android:id="@+id/choose_op_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Choose Operation Mode:"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/operation_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
             />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:selectAllOnFocus="false"
        android:text="@string/launch"
        android:textSize="18sp" />

</LinearLayout>
